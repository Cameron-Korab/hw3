<ul>

        <h1><%= @place.name %></h1>

        <% for post in @place.posts %>
                <h4><%= post.title %></h4>
                <%= post.posted_on %> <br>
                <%= post.description %>
        <% end %>

        <p><a href="/posts/new?place_id=<%= @place.id %>">New Post</a>

        <p><a href="/places">Back to all places</a>

</ul>
  